{
    "inputs": [
        {
            "type": "promptString",
            "id": "openai-api-key",
            "description": "OpenAI API Key",
            "password": true
        }
    ],
    "mcpServers": {
        "evm-server": {
            "command": "/home/user/.local/bin/uv",
            "args": [
                "--directory",
                "/home/user/Documents/mcp-v1/",
                "run",
                "src/main_evm.py"
            ],
            "env": {
                "OPENAI_API_KEY": "${input:openai-api-key}"
            }
        },
        "solana-server": {
            "command": "/home/user/.local/bin/uv",
            "args": [
                "--directory",
                "/home/user/Documents/mcp-v1/",
                "run",
                "src/main_solana.py"
            ],
            "env": {
                "OPENAI_API_KEY": "${input:openai-api-key}"
            }
        }
    }
}