{
    "servers": {
        "evm-server": {
            "command": "uv",
            "args": [
                "--directory",
                "${workspaceFolder}",
                "run",
                "src/main_evm.py"
            ],
            "env": {
                "envFile": "${workspaceFolder}/.env"
            }
        },
        "solana-server": {
            "command": "uv",
            "args": [
                "--directory",
                "${workspaceFolder}",
                "run",
                "src/main_solana.py"
            ],
            "env": {
                "envFile": "${workspaceFolder}/.env"
            }
        }
    }
}